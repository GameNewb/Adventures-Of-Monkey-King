            <string>///Collision with birds

var above_enemy = y &lt; other.y + vspd; //other inside collision refers to the instance you're colliding with (i.e. collide with bat, other = bat)
var falling = vspd &gt; 0;

//Check if we're in ledge grab, above the enemy and falling, OR above the enemy and on ledge
if(above_enemy &amp;&amp; falling)
{   

    //Check for a wall
    if(!place_meeting(x, yprevious, obj_solid))
    {
        y = yprevious;
    }
    
    //Move us right above the enemy
    while(!place_meeting(x, y+1, other))
    {
        y++;
    }
    
    // Kill the enemy
    with (other)
    {
        
        if(hp == 0)
        {
            state = bird_falling_state;
        }
        else
        {
            hp -= 1;
            state = enemy_invincibility;
        }
        
        //hp = 0;
    }
    
    //Bounce off the enemy
    vspd = -(16/1.5);
    
    //Play the sound
    //audio_play_sound(snd_step, 6, false); 
}
else
{
    take_damage();
}


</string>
